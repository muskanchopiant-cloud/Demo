{% style %}
#{{ section.id }}{
  display: none;
}
  #{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color:{{ section.settings.background_color }};
    {% endif %}
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image | image_url }});
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
    {% endif %}
  }
  #{{ section.id }} .page-width {
    max-width: {{ section.settings.page_width }}px;
    padding: 0 15px;
    margin: 0 auto;
    width: 100%;
  }
  @font-face {
    font-family: 'LunchBox';
    src: url('https://cdn.shopify.com/s/files/1/0530/4591/9916/files/LunchBox.eot?v=1756273712');
    src: url('https://cdn.shopify.com/s/files/1/0530/4591/9916/files/LunchBox.eot?v=1756273712?#iefix') format('embedded-opentype'),
        url('https://cdn.shopify.com/s/files/1/0530/4591/9916/files/LunchBox.woff2?v=1756273711') format('woff2'),
        url('https://cdn.shopify.com/s/files/1/0530/4591/9916/files/LunchBox.woff?v=1756273712') format('woff'),
        url('https://cdn.shopify.com/s/files/1/0530/4591/9916/files/LunchBox.ttf?v=1756273712') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  .image-text-section .image-text-details {
    display: flex;
    align-items: center;
    justify-content: center;
  } 
  .image-text-section .text-detail {
    width: calc(54% - 0px);
  }
  .image-text-section .image-detail {
    width: calc(46% - 0px);
  }
  .image-text-section .section-heading {
    font-family: LunchBox;
    font-weight: 400;
    font-size: 128px;
    line-height: 80px;
    letter-spacing: 0px;
    text-align: left;
    text-transform: uppercase;
    color: #C85F5D;
    padding-bottom: 27px;
  }
  .image-text-section .section-description p {
    font-family: Montserrat;
    font-weight: 400;
    font-size: 22px;
    line-height: 30px;
    letter-spacing: 0px;
    color: #090909;
    max-width: 545px;
    width: 100%;
  }
  .image-detail img {
    margin: 3px 0 0 -94px;
    max-width: 739px;
  }
  @media screen and (max-width: 1024px) {
    #{{ section.id }} {
      padding-top: {{ section.settings.tablet_padding_top }}px;
      padding-bottom: {{ section.settings.tablet_padding_bottom }}px;
    }
    .image-text-section .section-heading{
      font-size: 80px;
    }
    .image-text-section .section-description p{
      font-size: 18px;
    }
  }
  
  @media screen and (max-width: 767px) {
    #{{ section.id }} {
      padding-top: {{ section.settings.mobile_padding_top }}px;
      padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
      {% if section.settings.mobile_bg_image != blank %}
        background-image: url({{ section.settings.mobile_bg_image | image_url }});
      {% endif %}
    }
    #{{ section.id }} .page-width {
      padding: 0 30px;
    }
    .image-text-section .image-text-details{
      flex-direction: column;
    }
    .image-text-section .text-detail, .image-detail {
      width: 100%;
    }
    .image-text-section .section-heading{
      font-size: 54px;
      line-height: 60px;
    }
    .image-text-section .section-description p{
      font-size: 16px;
      line-height: 24px;
    }
    .image-text-section .image-detail img {
      margin: 0 -30px;
    }
  }
{% endstyle %}
<section id="{{ section.id }}" class="image-text-section {{ section.settings.custome_class }}">
  <div class="page-width">
   <div class="image-text-details">
    <div class="text-detail">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="section-description">
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>
    <div class="image-detail">
      {% if section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url }}"
          height="auto"
          width="auto"
          alt="{{ section.settings.image }}"
        >
      {% endif %}
    </div>
   </div>
  </div>
</section>
