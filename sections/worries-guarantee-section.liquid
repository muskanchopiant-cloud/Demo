{% style %}
  .worries-guarantee-section.section-{{ section.id }} {
    {% if section.settings.bg_image != blank %}
      background-image:url({{ section.settings.bg_image | image_url }});
      background-position: center center;
      background-size: cover;
      background-repeat: no-repeat;
    {% endif %}
    padding-top:{{ section.settings.desktop_padding_top }}px;
    padding-bottom:{{ section.settings.desktop_padding_bottom }}px;
    background: #FFF9D8;
  }
  .worries-guarantee-section .page-width{
    max-width:{{ section.settings.container_size }}px;
    margin:0 auto;
    padding:0 15px;
  }
  .worries-guarantee-section .worries-heading-text{
    padding-top: 16px;
  }
 /* .worries-guarantee-section .worries-heading-text {
    width: calc(100% - 54%);
  } */
  /* .worries-guarantee-section .worries-image {
    width: calc(100% - 48.5%);
  }  */
  .worries-guarantee-section .worries-guarantee-text {
    display: grid;
    gap: 45px;
    grid-template-columns: 50.9% auto;
    align-items: center;
  }
  .worries-guarantee-section .worries-image img {
    height: 100%;
  }
  .worries-guarantee-section .worries-heading-text h2 {
    color: #000;
    font-family: Inter;
    font-size: 43px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: 0.4px;
    padding-bottom: 43px;
  }
  .worries-text p {
    font-family: Inter;
    font-size: 18px;
    font-weight: 300;
    line-height: 26.56px;
    letter-spacing: -0.14px;
    text-align: left;
    padding-right: 38px;
    padding-left: 3px;
  }
  .worries-guarantee-section .buy-button.worries-guarantee-button {
    margin: 60px 0 0 -3px;
  }
  .worries-guarantee-section .bottom-text {
    max-width: 317px;
    width: 100%;
    margin-left: -3px;
  } 
  @media screen and (max-width:1240px) {
    .worries-guarantee-section .worries-image img {
      height: auto;
    }
    .worries-guarantee-section .worries-guarantee-text {
      align-items: center;
    }
  }
  @media screen and (max-width:1024px) {
    .worries-guarantee-section.section-{{ section.id }} {
      padding-top:{{ section.settings.tablet_padding_top }}px;
      padding-bottom:{{ section.settings.tablet_padding_bottom }}px;
    }
    .worries-guarantee-section .worries-guarantee-text {
      display: flex;
      gap: 51px;
    }
    .worries-guarantee-section .worries-heading-text h2 {
      font-size: 38px;
      padding:0 0 25px;
    }
    .worries-guarantee-section .buy-button.worries-guarantee-button {
      margin: 34px 0 0;
    }
    .worries-guarantee-section .worries-heading-text .worries-text p {
      font-size: 16px;
      line-height: 20.56px;
    }
  }
  @media screen and (min-width:767px) {
    .worries-guarantee-section .worries-image img.mobile-image{
        display:none;
    }
  }
  @media screen and (max-width:767px) {
    .worries-guarantee-section .page-width{
      padding: 0 24px;
    }
    .worries-guarantee-section .worries-image img.hide{
      display:none;
    }
    .worries-guarantee-section .worries-image img {
      height: auto;
      margin: 0 -10px 0 -10px;
    }
    .worries-guarantee-section.section-{{ section.id }} {
      padding-top:{{ section.settings.mobile_padding_top }}px;
      padding-bottom:{{ section.settings.mobile_padding_bottom }}px;
    }
    .worries-guarantee-section .worries-heading-text {
      padding: 28px 0 0 0;
    }
    .worries-guarantee-section .worries-guarantee-text {
      display: flex;
      gap: 0;
      flex-direction: column;
    }
    .worries-guarantee-section .worries-heading-text h2 {
      font-size: 32px;
      padding: 0 0 25px 10px;
      line-height: normal;
      letter-spacing: -0.704px;
    }
    .worries-guarantee-section .buy-button.worries-guarantee-button {
        margin: 34px auto 0;
    }
   .worries-guarantee-section p.risk-text {
        margin: 0 auto;
    }
    .worries-guarantee-section .worries-heading-text .worries-text p {
      font-size: 16px;
      line-height: 24px;
      letter-spacing: -0.304px;
      padding: 0 0 0 10px;
    }
    .worries-guarantee-section .worries-image, .worries-guarantee-section .worries-heading-text {
      width: 100%;
    }
  }
{% endstyle %}
<section class="worries-guarantee-section section-{{ section.id }} {{ section.settings.custom_class }}">
  <div class="page-width">
    <div class="worries-guarantee-content">
      <div class="worries-guarantee-image">
      </div>
      <div class="worries-guarantee-text">
        <div class="worries-image">
          {% if section.settings.image != blank %}
            <img class="{% if section.settings.mo_image != blank %}hide{% endif %}" src="{{ section.settings.image | image_url }}" width="auto" height="auto" alt="{{ section.settings.image.alt }}">
          {% endif %}
          {% if section.settings.mo_image != blank %}
            <img class="mobile-image" src="{{ section.settings.mo_image | image_url }}" width="auto" height="auto" alt="{{ section.settings.image.alt }}">
          {% endif %}
        </div>
        <div class="worries-heading-text">
          <h2>{{ section.settings.heading }}</h2>
          <div class="worries-text">
            {{ section.settings.text }}
          </div>
          {% if section.settings.button_text != blank %}
            <div class="buy-button worries-guarantee-button">
              <a href="{{ section.settings.button_url }}">{{ section.settings.button_text }}</a>
            </div>
          {% endif %}
          <div class="bottom-text">{{ section.settings.bottom_text }}</div>
        </div>
      </div>
    </div>
  </div>
</section>
