      }
    ],
    "blocks":[
      {
        "name":"Video review",
        "type":"text",
        "settings":[
          {
            "type":"image_picker",
            "id":"review_video",
            "label":"Review video"
          },
          {
            "type":"image_picker",
            "id":"review_image",
            "label":"Review image"
          },
          {
            "type": "text",
            "id": "review_title",
            "label": "Review title"
          },
          {
            "type": "richtext",
            "id": "review_text",
            "label": "Review text"
          },
          {
            "type": "richtext",
            "id": "review_author",
            "label": "Review author"
          },
          {
            "type": "image_picker",
            "id": "verified_buyer_image",
            "label": "Verified buyer image"
          },
          {
            "type": "richtext",
            "id": "verified_buyer_text",
            "label": "Verified buyer text"
          }
        ]
      }
    ],
    "presets":[
    {
      "name": "Video review section"
    }
  ]
  }
{% endschema %}